{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./",
        "declaration": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "resolveJsonModule": true,
        "lib": [
            "es2019"
        ],
        "allowJs": true
    },
    "include": [
        "server/**/*",
        "shared/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "app",
        "components"
    ]
}